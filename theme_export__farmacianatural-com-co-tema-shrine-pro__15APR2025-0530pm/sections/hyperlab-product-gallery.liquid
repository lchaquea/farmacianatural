{%- style -%}
  .hyperlab-product-gallery {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }

  @media screen and (max-width: 749px) {
    .hyperlab-product-gallery {
      padding: {{ section.settings.mobile_padding_top }}px 0 {{ section.settings.mobile_padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="hyperlab-product-gallery">
  <div class="page-width">
    <div class="hyperlab-product-gallery__container">
      {%- if section.settings.image != blank -%}
        <div class="hyperlab-product-gallery__image">
          {{ section.settings.image | image_url: width: 2000 | image_tag:
            loading: 'lazy',
            width: section.settings.image.width,
            height: section.settings.image.height,
            class: 'hyperlab-product-gallery__image-element'
          }}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hyperlab Product Gallery",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Product Gallery Image"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "mobile_padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Mobile Padding Top",
      "default": 24
    },
    {
      "type": "range",
      "id": "mobile_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Mobile Padding Bottom",
      "default": 24
    }
  ],
  "presets": [
    {
      "name": "Hyperlab Product Gallery"
    }
  ]
}
{% endschema %} 