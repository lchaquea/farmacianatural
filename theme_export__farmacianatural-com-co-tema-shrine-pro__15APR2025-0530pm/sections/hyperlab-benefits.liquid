{%- style -%}
  .hyperlab-benefits {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  .hyperlab-benefits__heading {
    text-align: {{ section.settings.heading_alignment }};
    margin-bottom: 2rem;
  }

  .hyperlab-benefits__grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: 2rem;
  }

  .hyperlab-benefits__item {
    text-align: center;
    padding: 2rem;
    background: {{ section.settings.card_background_color }};
    border-radius: 8px;
  }

  .hyperlab-benefits__icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .hyperlab-benefits__title {
    font-size: 1.25rem;
    margin-bottom: 1rem;
  }

  .hyperlab-benefits__description {
    font-size: 1rem;
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .hyperlab-benefits {
      padding: {{ section.settings.mobile_padding_top }}px 0 {{ section.settings.mobile_padding_bottom }}px;
    }

    .hyperlab-benefits__grid {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
    }
  }
{%- endstyle -%}

<div class="hyperlab-benefits">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <h2 class="hyperlab-benefits__heading">{{ section.settings.heading }}</h2>
    {%- endif -%}

    <div class="hyperlab-benefits__grid">
      {%- for block in section.blocks -%}
        <div class="hyperlab-benefits__item" {{ block.shopify_attributes }}>
          {%- if block.settings.icon != blank -%}
            <div class="hyperlab-benefits__icon">{{ block.settings.icon }}</div>
          {%- endif -%}
          {%- if block.settings.title != blank -%}
            <h3 class="hyperlab-benefits__title">{{ block.settings.title }}</h3>
          {%- endif -%}
          {%- if block.settings.description != blank -%}
            <div class="hyperlab-benefits__description">{{ block.settings.description }}</div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

