{%- style -%}
  .hyperlab-certifications {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  .hyperlab-certifications__container {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .hyperlab-certifications__heading {
    margin-bottom: 2rem;
  }

  .hyperlab-certifications__invima {
    margin-bottom: 2rem;
    padding: 1rem;
    background-color: #F8F8F8;
    border-radius: 8px;
  }

  .hyperlab-certifications__invima-number {
    font-weight: bold;
    color: #FF6B00;
  }

  .hyperlab-certifications__trust-badges {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .hyperlab-certifications__badge {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 150px;
  }

  .hyperlab-certifications__badge-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .hyperlab-certifications__badge-text {
    font-size: 0.9rem;
  }

  .hyperlab-certifications__history {
    max-width: 800px;
    margin: 0 auto;
  }

  @media screen and (max-width: 749px) {
    .hyperlab-certifications {
      padding: {{ section.settings.mobile_padding_top }}px 0 {{ section.settings.mobile_padding_bottom }}px;
    }

    .hyperlab-certifications__trust-badges {
      gap: 1rem;
    }
  }
{%- endstyle -%}

<div class="hyperlab-certifications">
  <div class="page-width">
    <div class="hyperlab-certifications__container">
      {%- if section.settings.heading != blank -%}
        <h2 class="hyperlab-certifications__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}

      <div class="hyperlab-certifications__invima">
        <p>Registro INVIMA: <span class="hyperlab-certifications__invima-number">{{ section.settings.invima_number }}</span></p>
      </div>

      <div class="hyperlab-certifications__trust-badges">
        {%- for block in section.blocks -%}
          {%- if block.type == 'badge' -%}
            <div class="hyperlab-certifications__badge" {{ block.shopify_attributes }}>
              {%- if block.settings.icon != blank -%}
                <span class="hyperlab-certifications__badge-icon">{{ block.settings.icon }}</span>
              {%- endif -%}
              <span class="hyperlab-certifications__badge-text">{{ block.settings.text }}</span>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>

      {%- if section.settings.history_text != blank -%}
        <div class="hyperlab-certifications__history">
          {{ section.settings.history_text }}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

