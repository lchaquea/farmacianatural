{%- style -%}
  .hyperlab-ingredients {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  .hyperlab-ingredients__container {
    display: flex;
    align-items: center;
    gap: 4rem;
  }

  .hyperlab-ingredients__content {
    flex: 1;
  }

  .hyperlab-ingredients__image {
    flex: 1;
  }

  .hyperlab-ingredients__heading {
    margin-bottom: 2rem;
  }

  .hyperlab-ingredients__list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .hyperlab-ingredients__item {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
    font-size: 1.1rem;
  }

  .hyperlab-ingredients__icon {
    margin-right: 1rem;
    font-size: 1.5rem;
  }

  @media screen and (max-width: 749px) {
    .hyperlab-ingredients {
      padding: {{ section.settings.mobile_padding_top }}px 0 {{ section.settings.mobile_padding_bottom }}px;
    }

    .hyperlab-ingredients__container {
      flex-direction: column;
      gap: 2rem;
    }

    .hyperlab-ingredients__image {
      order: -1;
    }
  }
{%- endstyle -%}

<div class="hyperlab-ingredients">
  <div class="page-width">
    <div class="hyperlab-ingredients__container">
      <div class="hyperlab-ingredients__content">
        {%- if section.settings.heading != blank -%}
          <h2 class="hyperlab-ingredients__heading">{{ section.settings.heading }}</h2>
        {%- endif -%}

        <ul class="hyperlab-ingredients__list">
          {%- for block in section.blocks -%}
            <li class="hyperlab-ingredients__item" {{ block.shopify_attributes }}>
              {%- if block.settings.icon != blank -%}
                <span class="hyperlab-ingredients__icon">{{ block.settings.icon }}</span>
              {%- endif -%}
              {{ block.settings.ingredient }}
            </li>
          {%- endfor -%}
        </ul>
      </div>

      {%- if section.settings.image != blank -%}
        <div class="hyperlab-ingredients__image">
          {{ section.settings.image | image_url: width: 800 | image_tag:
            loading: 'lazy',
            width: section.settings.image.width,
            height: section.settings.image.height,
            class: 'hyperlab-ingredients__image-element'
          }}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

