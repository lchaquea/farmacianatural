{%- assign product = all_products[section.settings.product_handle] | default: product -%}

<div class="hyperlab-v10-dosage">
  <h2 class="section-title">{{ section.settings.title }}</h2>

  <div class="dosage-container">
    <div class="dosage-cards">
      {% for block in section.blocks %}
        <div class="dosage-card" {{ block.shopify_attributes }}>
          <div class="card-image">
            <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.title }}">
          </div>
          <div class="card-content">
            <h3>{{ block.settings.title }}</h3>
            <p>{{ block.settings.description }}</p>
            <div class="author-note">
              <span class="heart-icon">♥</span>
              <span>{{ block.settings.author }}</span>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "V10 Dosage",
  "settings": [
    {
      "type": "product",
      "id": "product_handle",
      "label": "Product"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "CUÁL ES LA DOSIS?"
    }
  ],
  "blocks": [
    {
      "type": "dosage",
      "name": "Dosage Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Menores de 2 años"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Una cucharadita al día en cualquier hora de la mañana"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author",
          "default": "Carolina Soto a sus hijos"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "V10 Dosage",
      "blocks": [
        {
          "type": "dosage",
          "settings": {
            "title": "Menores de 2 años",
            "description": "Una cucharadita al día en cualquier hora de la mañana",
            "author": "Carolina Soto a sus hijos"
          }
        },
        {
          "type": "dosage",
          "settings": {
            "title": "Niños entre 2 y 4 años",
            "description": "Dos cucharaditas al día, una en la mañana y otra en la tarde",
            "author": "Carolina Soto a sus hijos"
          }
        },
        {
          "type": "dosage",
          "settings": {
            "title": "Niños entre 4 y 16 años",
            "description": "Dos cucharadas soperas al día, 1 en la mañana y otra en la tarde",
            "author": "Carolina Soto a sus hijos"
          }
        }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
.hyperlab-v10-dosage {
  padding: 5px;
  background: #fff;
}

.dosage-header {
  text-align: center;
  margin-bottom: 10px;
}

.section-title {
  font-size: 16px;
  font-weight: 700;
  margin-bottom: 8px;
  color: #1a1a1a;
}

.section-subtitle {
  font-size: 12px;
  color: #666;
  max-width: 400px;
  margin: 0 auto;
}

.dosage-container {
  max-width: 800px;
  margin: 0 auto;
  padding: 8px;
}

.dosage-cards {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 8px;
  margin: 10px 0;
}

.dosage-card {
  background: #f8f8f8;
  border-radius: 6px;
  overflow: hidden;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
}

.card-image {
  width: 100%;
  height: 120px;
  object-fit: cover;
}

.card-content {
  padding: 10px;
}

.card-content h3 {
  font-size: 14px;
  font-weight: 600;
  margin-bottom: 6px;
  color: #1a1a1a;
}

.card-content p {
  font-size: 12px;
  color: #666;
  line-height: 1.3;
  margin: 0;
}

.author-note {
  text-align: center;
  margin-top: 10px;
  padding: 8px;
  font-size: 10px;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 3px;
}

.heart-icon {
  color: #ff6b00;
}

@media screen and (min-width: 768px) {
  .hyperlab-v10-dosage {
    padding: 10px;
  }

  .section-title {
    font-size: 18px;
  }

  .section-subtitle {
    font-size: 14px;
  }

  .dosage-container {
    padding: 12px;
  }

  .dosage-cards {
    gap: 10px;
    margin: 15px 0;
  }

  .card-image {
    height: 150px;
  }

  .card-content {
    padding: 12px;
  }

  .card-content h3 {
    font-size: 16px;
  }

  .card-content p {
    font-size: 14px;
  }

  .author-note {
    margin-top: 15px;
    padding: 12px;
    font-size: 12px;
    gap: 4px;
  }
}

@media screen and (min-width: 990px) {
  .hyperlab-v10-dosage {
    padding: 15px;
  }

  .section-title {
    font-size: 20px;
  }

  .section-subtitle {
    font-size: 16px;
  }

  .dosage-container {
    padding: 15px;
  }

  .dosage-cards {
    gap: 12px;
    margin: 20px 0;
  }

  .card-image {
    height: 180px;
  }

  .card-content {
    padding: 15px;
  }

  .card-content h3 {
    font-size: 18px;
  }

  .card-content p {
    font-size: 16px;
  }

  .author-note {
    margin-top: 20px;
    padding: 15px;
    font-size: 14px;
    gap: 5px;
  }
}
{% endstylesheet %} 