{%- assign product = all_products[section.settings.product_handle] | default: product -%}

{% render 'hyperlab-global-styles' %}

<div class="hyperlab-section hyperlab-bg-white hyperlab-py-40">
  <div class="hyperlab-content">
    <div class="comparison-header">
      <h2 class="section-title">{{ section.settings.title | default: "¿Por qué elegir V10?" }}</h2>
      {% if section.settings.subtitle %}
        <p class="section-subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>

    <div class="comparison-grid">
      {% for block in section.blocks %}
        <div class="comparison-item">
          <div class="comparison-icon">{{ block.settings.icon }}</div>
          <h3 class="comparison-title">{{ block.settings.title }}</h3>
          <p class="comparison-text">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "V10 Comparison",
  "class": "hyperlab-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "¿Por qué elegir V10?"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Section Subtitle"
    },
    {
      "type": "product",
      "id": "product_handle",
      "label": "Product"
    }
  ],
  "blocks": [
    {
      "type": "comparison_item",
      "name": "Comparison Item",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon (emoji)",
          "default": "✨"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
.comparison-header {
  text-align: center;
  margin-bottom: 40px;
}

.section-title {
  font-size: 32px;
  font-weight: 700;
  margin-bottom: 16px;
  color: #1a1a1a;
}

.section-subtitle {
  font-size: 18px;
  color: #666;
  max-width: 600px;
  margin: 0 auto;
}

.comparison-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 24px;
}

.comparison-item {
  background: #f8f8f8;
  padding: 24px;
  border-radius: 12px;
  text-align: center;
}

.comparison-icon {
  font-size: 40px;
  margin-bottom: 16px;
}

.comparison-title {
  font-size: 20px;
  font-weight: 600;
  margin-bottom: 12px;
  color: #1a1a1a;
}

.comparison-text {
  font-size: 16px;
  color: #666;
  line-height: 1.5;
}

@media screen and (max-width: 767px) {
  .section-title {
    font-size: 28px;
  }

  .comparison-grid {
    grid-template-columns: 1fr;
  }
}
{% endstylesheet %} 