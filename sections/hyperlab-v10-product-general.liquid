{%- assign product = all_products[section.settings.product_handle] | default: product -%}

{% render 'hyperlab-global-styles' %}

<div class="hyperlab-v10-product-general">
  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'ticker' -%}
        <div class="ticker-container" {{ block.shopify_attributes }}>
          <div class="ticker-wrapper">
            <div class="ticker-text">{{ block.settings.message }}</div>
            <div class="ticker-text" aria-hidden="true">{{ block.settings.message }}</div>
          </div>
        </div>

      {%- when 'hero' -%}
        <div class="hero-section" {{ block.shopify_attributes }}>
          <div class="hero-content">
            <div class="hero-header">
              <div class="logo-container">
                {%- if block.settings.logo != blank -%}
                  <img src="{{ block.settings.logo | img_url: '100x' }}" alt="{{ shop.name }}" class="hero-logo">
                {%- endif -%}
              </div>
              
              <h1 class="hero-title">{{ block.settings.headline }}</h1>
            </div>

            <div class="product-carousel">
              <div class="carousel-container">
                {%- if block.settings.gallery_images.size > 0 -%}
                  <div class="carousel-main">
                    {%- for image in block.settings.gallery_images -%}
                      <div class="carousel-slide {% if forloop.first %}active{% endif %}" data-slide-index="{{ forloop.index0 }}">
                        <img src="{{ image | img_url: 'large' }}" 
                             alt="{{ image.alt | escape }}"
                             class="carousel-image">
                      </div>
                    {%- endfor -%}
                  </div>

                  <div class="carousel-thumbnails">
                    {%- for image in block.settings.gallery_images -%}
                      <button class="carousel-thumb {% if forloop.first %}active{% endif %}" 
                              data-slide-index="{{ forloop.index0 }}">
                        <img src="{{ image | img_url: '150x150', crop: 'center' }}" 
                             alt="{{ image.alt | escape }}"
                             class="thumb-image">
                      </button>
                    {%- endfor -%}
                  </div>
                {%- endif -%}
              </div>
            </div>

            <div class="hero-cta">
              <div class="subheadline-container">
                <h2 class="subheadline">{{ block.settings.subheadline }}</h2>
                {%- if block.settings.certification_badge != blank -%}
                  <div class="certification-badge">
                    <img src="{{ block.settings.certification_badge | img_url: '100x' }}" 
                         alt="Certificaci√≥n INVIMA" 
                         class="certification-image">
                  </div>
                {%- endif -%}
              </div>
            </div>
          </div>
        </div>

      {%- when 'product_header' -%}
        <div class="product-header" {{ block.shopify_attributes }}>
          <div class="product-header-content">
            <h1 class="product-title">{{ block.settings.title }}</h1>
            
            <div class="price-container">
              <span class="price">${{ product.price | money_without_currency }}</span>
              <span class="shipping-tag">{{ block.settings.shipping_text }}</span>
            </div>

            <div class="stars">{{ block.settings.stars }}</div>

            <div class="scarcity-widget">
              <span class="scarcity-icon">{{ block.settings.scarcity_emoji }}</span>
              <span class="scarcity-text">{{ block.settings.scarcity_text }}</span>
            </div>

            <div class="stats-row">
              <a href="#reviews" class="rating-link">
                <span class="rating-score">{{ block.settings.rating }}</span>
                <span class="review-count">{{ block.settings.review_count }}</span>
              </a>
              <div class="metric">
                <span class="icon">{{ block.settings.metric_icon }}</span>
                <span class="text">{{ block.settings.metric_text }}</span>
              </div>
            </div>
          </div>
        </div>

      {%- when 'tabs' -%}
        <div class="product-tabs" {{ block.shopify_attributes }}>
          <div class="tabs-header-wrapper">
            <div class="tabs-header">
              {%- for tab in block.settings.tabs -%}
                <button class="tab-button {% if forloop.first %}active{% endif %}" data-tab="{{ tab.id }}">
                  <span class="tab-icon">{{ tab.icon }}</span>
                  <span class="tab-text">{{ tab.title }}</span>
                </button>
              {%- endfor -%}
            </div>
          </div>

          <div class="tab-content-wrapper">
            {%- for tab in block.settings.tabs -%}
              <div class="tab-content {% if forloop.first %}active{% endif %}" id="{{ tab.id }}">
                <div class="content-block">
                  {{ tab.content }}
                </div>
              </div>
            {%- endfor -%}
          </div>
        </div>

      {%- when 'button' -%}
        <div class="button-container" {{ block.shopify_attributes }}>
          <a href="{{ block.settings.button_link }}" class="primary-button {{ block.settings.button_animation }}">
            {{ block.settings.button_text }}
            <span class="button-subtext">{{ block.settings.button_subtext }}</span>
          </a>
        </div>
    {%- endcase -%}
  {%- endfor -%}
</div>

