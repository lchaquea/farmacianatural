{%- assign product = all_products[section.settings.product_handle] | default: product -%}

<div class="hyperlab-v10-trust-badges">
  <div class="trust-badges-container">
    {% for block in section.blocks %}
      <div class="trust-badge" {{ block.shopify_attributes }}>
        <div class="badge-icon">
          {% case forloop.index %}
            {% when 1 %}
              <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M4 16L12 21L20 16M4 12L12 17L20 12M4 8L12 13L20 8L12 3L4 8Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            {% when 2 %}
              <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9 12L11 14L15 10M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            {% when 3 %}
              <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9 12L11 14L15 10M12 3L20 7V11C20 15.4183 16.4183 19 12 19C7.58172 19 4 15.4183 4 11V7L12 3Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
          {% endcase %}
        </div>
        <div class="trust-badge-content">
          <h3>{{ block.settings.title }}</h3>
          {% if block.settings.subtitle != blank %}
            <p class="subtitle">{{ block.settings.subtitle }}</p>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>

  <button class="primary-button">
    CLICK AQU√ç Y PAGA AL RECIBIR
    <span class="button-subtext">paga en casa contraentrega</span>
  </button>
</div>

{% schema %}
{
  "name": "V10 Trust Badges",
  "settings": [
    {
      "type": "product",
      "id": "product_handle",
      "label": "Product"
    }
  ],
  "blocks": [
    {
      "type": "trust_badge",
      "name": "Trust Badge",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Trust Badge Title"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "info": "Optional subtitle"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "V10 Trust Badges",
      "blocks": [
        {
          "type": "trust_badge",
          "settings": {
            "title": "FREE SHIPPING SUBSCRIPTION OR $40+ ORDERS"
          }
        },
        {
          "type": "trust_badge",
          "settings": {
            "title": "GUARANTEED RESULTS"
          }
        },
        {
          "type": "trust_badge",
          "settings": {
            "title": "30 DAY MONEY BACK GUARANTEE"
          }
        }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
.hyperlab-v10-trust-badges {
  padding: 30px 0;
  text-align: center;
  max-width: 1200px;
  margin: 0 auto;
}

.trust-badges-container {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin: 0 auto;
  padding: 0 15px;
}

.trust-badge {
  flex: 1;
  min-width: 0;
  padding: 15px;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.badge-icon {
  margin-bottom: 12px;
  color: #333;
  flex-shrink: 0;
}

.trust-badge-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex-grow: 1;
}

.trust-badge h3 {
  font-size: 12px;
  line-height: 1.3;
  margin: 0;
  color: #333;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  font-weight: 600;
}

.subtitle {
  font-size: 12px;
  color: #666;
  margin: 4px 0 0;
}

@media screen and (min-width: 768px) {
  .trust-badges-container {
    gap: 30px;
  }
  
  .trust-badge {
    padding: 20px;
  }

  .trust-badge h3 {
    font-size: 14px;
  }
}

@media screen and (min-width: 990px) {
  .trust-badge h3 {
    font-size: 16px;
  }
}

.primary-button {
  background-color: #ff6b00;
  color: white;
  border: none;
  padding: 15px 30px;
  border-radius: 25px;
  font-weight: bold;
  cursor: pointer;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  max-width: 300px;
  margin: 0 auto;
}

.button-subtext {
  font-size: 12px;
  opacity: 0.8;
}
{% endstylesheet %} 