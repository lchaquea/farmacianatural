{%- assign product = all_products[section.settings.product_handle] | default: product -%}

<div class="hyperlab-v10-trust-badges">
  <div class="trust-badges-container">
    {% for block in section.blocks %}
      <div class="trust-badge" {{ block.shopify_attributes }}>
        <div class="badge-icon">
          {% case forloop.index %}
            {% when 1 %}
              <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M4 16L12 21L20 16M4 12L12 17L20 12M4 8L12 13L20 8L12 3L4 8Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            {% when 2 %}
              <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9 12L11 14L15 10M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            {% when 3 %}
              <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9 12L11 14L15 10M12 3L20 7V11C20 15.4183 16.4183 19 12 19C7.58172 19 4 15.4183 4 11V7L12 3Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
          {% endcase %}
        </div>
        <div class="trust-badge-content">
          <h3>{{ block.settings.title }}</h3>
          {% if block.settings.subtitle != blank %}
            <p class="subtitle">{{ block.settings.subtitle }}</p>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>

  <button class="primary-button">
    CLICK AQU√ç Y PAGA AL RECIBIR
    <span class="button-subtext">paga en casa contraentrega</span>
  </button>
</div>

{% schema %}
{
  "name": "V10 Trust Badges",
  "settings": [
    {
      "type": "product",
      "id": "product_handle",
      "label": "Product"
    }
  ],
  "blocks": [
    {
      "type": "trust_badge",
      "name": "Trust Badge",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Trust Badge Title"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "info": "Optional subtitle"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "V10 Trust Badges",
      "blocks": [
        {
          "type": "trust_badge",
          "settings": {
            "title": "FREE SHIPPING SUBSCRIPTION OR $40+ ORDERS"
          }
        },
        {
          "type": "trust_badge",
          "settings": {
            "title": "GUARANTEED RESULTS"
          }
        },
        {
          "type": "trust_badge",
          "settings": {
            "title": "30 DAY MONEY BACK GUARANTEE"
          }
        }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
.hyperlab-v10-trust-badges {
  padding: 2px 0;
  background: #fff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

.trust-badges-container {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 5px;
  padding: 0 4px;
  max-width: 1200px;
  margin: 0 auto;
  flex-wrap: wrap;
}

.trust-badge {
  display: flex;
  align-items: center;
  padding: 4px;
  background: #fff;
  border-radius: 4px;
  box-shadow: 0 1px 2px rgba(0,0,0,0.05);
  transition: transform 0.2s ease;
}

.trust-badge:hover {
  transform: translateY(-1px);
}

.badge-icon {
  width: 16px;
  height: 16px;
  margin-right: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.trust-badge h3 {
  font-size: 9px;
  margin: 0;
  color: #333;
  font-weight: 600;
  line-height: 1.1;
}

.subtitle {
  font-size: 8px;
  color: #666;
  margin: 1px 0 0;
  line-height: 1.1;
}

.primary-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 4px 8px;
  background: #ff6b00;
  color: white;
  border: none;
  border-radius: 4px;
  font-size: 10px;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.2s ease;
  margin: 4px 0;
  max-width: 200px;
  width: 100%;
}

.primary-button:hover {
  background: #e05a00;
  transform: translateY(-1px);
}

.button-subtext {
  font-size: 8px;
  color: #666;
  margin-top: 2px;
  text-align: center;
}

@media screen and (min-width: 768px) {
  .trust-badges-container {
    gap: 8px;
    padding: 0 6px;
  }

  .trust-badge {
    padding: 6px;
  }

  .badge-icon {
    width: 20px;
    height: 20px;
    margin-right: 6px;
  }

  .trust-badge h3 {
    font-size: 11px;
  }

  .subtitle {
    font-size: 9px;
  }

  .primary-button {
    padding: 6px 12px;
    font-size: 12px;
    max-width: 220px;
  }

  .button-subtext {
    font-size: 9px;
  }
}

@media screen and (min-width: 990px) {
  .trust-badges-container {
    gap: 10px;
    padding: 0 8px;
  }

  .trust-badge {
    padding: 8px;
  }

  .badge-icon {
    width: 24px;
    height: 24px;
    margin-right: 8px;
  }

  .trust-badge h3 {
    font-size: 12px;
  }

  .subtitle {
    font-size: 10px;
  }

  .primary-button {
    padding: 8px 15px;
    font-size: 14px;
    max-width: 240px;
  }

  .button-subtext {
    font-size: 10px;
  }
}
{% endstylesheet %} 