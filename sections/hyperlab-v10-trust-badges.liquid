{%- assign product = all_products[section.settings.product_handle] | default: product -%}

<div class="hyperlab-v10-trust-badges">
  <div class="trust-badges-container">
    {% for block in section.blocks %}
      <div class="trust-badge" {{ block.shopify_attributes }}>
        <div class="badge-icon">
          <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            {{ block.settings.custom_icon }}
          </svg>
        </div>
        <h3>{{ block.settings.emoji }} {{ block.settings.title }}</h3>
        {% if block.settings.subtitle != blank %}
          <p class="invima-number">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endfor %}
  </div>

  <button class="primary-button">
    CLICK AQU√ç Y PAGA AL RECIBIR
    <span class="button-subtext">paga en casa contraentrega</span>
  </button>
</div>

