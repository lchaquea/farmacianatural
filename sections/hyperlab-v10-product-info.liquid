{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  const tabButtons = document.querySelectorAll('.tab-button');
  const tabContents = document.querySelectorAll('.tab-content');

  // Tab switching functionality
  tabButtons.forEach(button => {
    button.addEventListener('click', () => {
      const tabId = button.getAttribute('data-tab');
      
      // Remove active class from all buttons and contents
      tabButtons.forEach(btn => btn.classList.remove('active'));
      tabContents.forEach(content => content.classList.remove('active'));
      
      // Add active class to clicked button and corresponding content
      button.classList.add('active');
      document.getElementById(tabId).classList.add('active');
    });
  });

  // Update scarcity number randomly
  function updateScarcity() {
    const scarcityText = document.querySelector('.scarcity-text');
    if (scarcityText) {
      const randomUnits = Math.floor(Math.random() * 8) + 5; // Random number between 5-12
      const template = scarcityText.getAttribute('data-template') || '¬°Solo quedan {n} unidades en stock!';
      scarcityText.textContent = template.replace('{n}', randomUnits);
    }
  }

  // Update every 30 seconds
  setInterval(updateScarcity, 30000);
  
  // Smooth scroll to reviews when rating is clicked
  const ratingLink = document.querySelector('.rating-link');
  if (ratingLink) {
    ratingLink.addEventListener('click', (e) => {
      e.preventDefault();
      const reviewsSection = document.querySelector(e.currentTarget.getAttribute('href'));
      if (reviewsSection) {
        reviewsSection.scrollIntoView({ behavior: 'smooth' });
      }
    });
  }
});
{% endjavascript %} 