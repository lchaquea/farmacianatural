{%- assign product = all_products[section.settings.product_handle] | default: product -%}

<div class="hyperlab-v10-ingredients">
  <h2 class="section-title">{{ section.settings.title }}</h2>
  
  {% if section.settings.title_image %}
    <div class="title-image">
      <img src="{{ section.settings.title_image | img_url: 'master' }}" alt="{{ section.settings.title }}">
    </div>
  {% endif %}

  <div class="ingredients-content" {% if section.settings.background_image %}style="background-image: url({{ section.settings.background_image | img_url: 'master' }});"{% endif %}>
    <div class="ingredients-list">
      {% for block in section.blocks %}
        <div class="ingredient-item" {{ block.shopify_attributes }}>
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "V10 Ingredients",
  "settings": [
    {
      "type": "product",
      "id": "product_handle",
      "label": "Product"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "¿TUS HIJOS NO ESTÁN COMIENDO BIEN?"
    },
    {
      "type": "image_picker",
      "id": "title_image",
      "label": "Title Image"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    }
  ],
  "blocks": [
    {
      "type": "ingredient",
      "name": "Ingredient",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "CHONTADURO"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Rico en vitaminas A y C, esenciales para la visión y el sistema inmunológico"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "V10 Ingredients",
      "blocks": [
        {
          "type": "ingredient",
          "settings": {
            "title": "CHONTADURO",
            "description": "Rico en vitaminas A y C, esenciales para la visión y el sistema inmunológico"
          }
        },
        {
          "type": "ingredient",
          "settings": {
            "title": "BOROJÓ",
            "description": "Fuente de energía natural, mejora el rendimiento físico y mental"
          }
        },
        {
          "type": "ingredient",
          "settings": {
            "title": "VITAMINAS Y MINERALES",
            "description": "Estimulan el apetito y apoyan el desarrollo cognitivo. Fortalecen huesos, músculos y mejoran la concentración"
          }
        },
        {
          "type": "ingredient",
          "settings": {
            "title": "MIEL Y NARANJA",
            "description": "Evita el consumo de azúcares procesados y mejora la digestión"
          }
        }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
.hyperlab-v10-ingredients {
  padding: 10px;
  background: #fff;
}

.ingredients-header {
  text-align: center;
  margin-bottom: 10px;
}

.section-title {
  font-size: 16px;
  font-weight: 700;
  margin-bottom: 8px;
  color: #1a1a1a;
}

.section-subtitle {
  font-size: 12px;
  color: #666;
  max-width: 400px;
  margin: 0 auto;
}

.ingredients-content {
  background: #f8f8f8;
  padding: 8px;
  border-radius: 6px;
  margin: 0 auto;
  max-width: 600px;
}

.ingredients-list {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  gap: 8px;
}

.ingredient-item {
  background: #fff;
  padding: 10px;
  border-radius: 4px;
  text-align: center;
  margin: 8px 0;
}

.ingredient-icon {
  font-size: 24px;
  margin-bottom: 8px;
}

.ingredient-title {
  font-size: 14px;
  font-weight: 600;
  margin-bottom: 6px;
  color: #1a1a1a;
}

.ingredient-text {
  font-size: 12px;
  color: #666;
  line-height: 1.3;
}

@media screen and (min-width: 768px) {
  .hyperlab-v10-ingredients {
    padding: 15px;
  }

  .section-title {
    font-size: 18px;
  }

  .section-subtitle {
    font-size: 14px;
  }

  .ingredients-content {
    padding: 12px;
  }

  .ingredients-list {
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 10px;
  }

  .ingredient-item {
    padding: 12px;
  }

  .ingredient-icon {
    font-size: 28px;
    margin-bottom: 10px;
  }

  .ingredient-title {
    font-size: 16px;
  }

  .ingredient-text {
    font-size: 14px;
  }
}

@media screen and (min-width: 990px) {
  .hyperlab-v10-ingredients {
    padding: 20px;
  }

  .section-title {
    font-size: 20px;
  }

  .section-subtitle {
    font-size: 16px;
  }

  .ingredients-content {
    padding: 15px;
  }

  .ingredients-list {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 12px;
  }

  .ingredient-item {
    padding: 15px;
  }

  .ingredient-icon {
    font-size: 32px;
    margin-bottom: 12px;
  }

  .ingredient-title {
    font-size: 18px;
  }

  .ingredient-text {
    font-size: 16px;
  }
}
{% endstylesheet %} 