{% schema %}
{
  "name": "V10 FAQ",
  "class": "hyperlab-section",
  "settings": [
    {
      "type": "product",
      "id": "product_handle",
      "label": "Product"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.hyperlab-v10-faq {
  padding: 10px;
  background: #fff;
}

.faq-header {
  text-align: center;
  margin-bottom: 10px;
}

.section-title {
  font-size: 16px;
  font-weight: 700;
  margin-bottom: 8px;
  color: #1a1a1a;
}

.section-subtitle {
  font-size: 12px;
  color: #666;
  max-width: 400px;
  margin: 0 auto;
}

.faq-container {
  max-width: 600px;
  margin: 0 auto;
  padding: 8px;
}

.faq-item {
  background: #f8f8f8;
  border-radius: 4px;
  margin: 8px 0;
  overflow: hidden;
}

.faq-question {
  padding: 10px;
  cursor: pointer;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 12px;
  font-weight: 600;
  color: #1a1a1a;
}

.faq-answer {
  padding: 10px;
  font-size: 12px;
  color: #666;
  line-height: 1.3;
  max-height: 300px;
  overflow-y: auto;
}

.faq-footer {
  text-align: center;
  margin-top: 10px;
  padding: 8px;
}

.footer-info {
  max-width: 400px;
  margin: 0 auto;
  font-size: 10px;
  color: #999;
}

@media screen and (min-width: 768px) {
  .hyperlab-v10-faq {
    padding: 15px;
  }

  .section-title {
    font-size: 18px;
  }

  .section-subtitle {
    font-size: 14px;
  }

  .faq-container {
    padding: 12px;
  }

  .faq-question {
    padding: 12px;
    font-size: 14px;
  }

  .faq-answer {
    padding: 12px;
    font-size: 14px;
  }

  .faq-footer {
    margin-top: 15px;
    padding: 12px;
  }

  .footer-info {
    font-size: 12px;
  }
}

@media screen and (min-width: 990px) {
  .hyperlab-v10-faq {
    padding: 20px;
  }

  .section-title {
    font-size: 20px;
  }

  .section-subtitle {
    font-size: 16px;
  }

  .faq-container {
    padding: 15px;
  }

  .faq-question {
    padding: 15px;
    font-size: 16px;
  }

  .faq-answer {
    padding: 15px;
    font-size: 16px;
  }

  .faq-footer {
    margin-top: 20px;
    padding: 15px;
  }

  .footer-info {
    font-size: 14px;
  }
}
{% endstylesheet %}

{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  const faqQuestions = document.querySelectorAll('.faq-question');
  
  faqQuestions.forEach(question => {
    question.addEventListener('click', () => {
      const isExpanded = question.getAttribute('aria-expanded') === 'true';
      
      // Close all other questions
      faqQuestions.forEach(q => {
        if (q !== question) {
          q.setAttribute('aria-expanded', 'false');
        }
      });
      
      // Toggle current question
      question.setAttribute('aria-expanded', !isExpanded);
    });
  });
});
{% endjavascript %} 