{%- assign product = all_products[section.settings.product_handle] | default: product -%}

<div class="hyperlab-v10-social-proof">
  <h2 class="section-title">Casos de hijos con apetito y sin resfriados/m√©dicos</h2>
  
  <div class="reels-container">
    {%- for block in section.blocks -%}
      <div class="reel-bubble" data-reel-url="{{ block.settings.reel_url }}">
        <div class="reel-thumbnail">
          <img src="{{ block.settings.thumbnail_image | img_url: '200x200', crop: 'center' }}" 
               alt="{{ block.settings.title }}"
               loading="lazy">
          <div class="play-button">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M8 5V19L19 12L8 5Z" fill="white"/>
            </svg>
          </div>
        </div>
        <p class="reel-title">{{ block.settings.title }}</p>
      </div>
    {%- endfor -%}
  </div>
</div>

<div id="reelModal" class="reel-modal">
  <div class="modal-content">
    <button class="close-modal">&times;</button>
    <div class="reel-embed-container"></div>
  </div>
</div>

{% schema %}
{
  "name": "V10 Social Proof",
  "settings": [
    {
      "type": "product",
      "id": "product_handle",
      "label": "Product"
    }
  ],
  "blocks": [
    {
      "type": "reel",
      "name": "Instagram Reel",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Customer Story"
        },
        {
          "type": "image_picker",
          "id": "thumbnail_image",
          "label": "Thumbnail Image"
        },
        {
          "type": "url",
          "id": "reel_url",
          "label": "Instagram Reel URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "V10 Social Proof",
      "blocks": [
        {
          "type": "reel"
        },
        {
          "type": "reel"
        },
        {
          "type": "reel"
        }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
.hyperlab-v10-social-proof {
  padding: 40px 0;
  text-align: center;
}

.section-title {
  font-size: 28px;
  font-weight: bold;
  margin-bottom: 30px;
  text-transform: uppercase;
}

.reels-container {
  display: flex;
  gap: 20px;
  overflow-x: auto;
  padding: 20px 0;
  scroll-snap-type: x mandatory;
  -webkit-overflow-scrolling: touch;
}

.reel-bubble {
  flex: 0 0 auto;
  width: 150px;
  text-align: center;
  scroll-snap-align: start;
  cursor: pointer;
}

.reel-thumbnail {
  position: relative;
  width: 150px;
  height: 150px;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 10px;
}

.reel-thumbnail img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.play-button {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.reel-title {
  font-size: 14px;
  margin: 0;
  color: #333;
}

.reel-modal {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.9);
  z-index: 1000;
}

.modal-content {
  position: relative;
  width: 100%;
  max-width: 500px;
  margin: 40px auto;
  background: white;
  border-radius: 10px;
  overflow: hidden;
}

.close-modal {
  position: absolute;
  top: 10px;
  right: 10px;
  background: none;
  border: none;
  color: white;
  font-size: 24px;
  cursor: pointer;
  z-index: 1;
}

.reel-embed-container {
  position: relative;
  padding-bottom: 177.77%; /* Instagram Reel aspect ratio (9:16) */
  height: 0;
  overflow: hidden;
}

.reel-embed-container iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

@media screen and (min-width: 768px) {
  .section-title {
    font-size: 32px;
  }

  .reels-container {
    justify-content: center;
    flex-wrap: wrap;
  }
}
{% endstylesheet %}

{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  const reelBubbles = document.querySelectorAll('.reel-bubble');
  const modal = document.getElementById('reelModal');
  const closeModal = modal.querySelector('.close-modal');
  const embedContainer = modal.querySelector('.reel-embed-container');

  reelBubbles.forEach(bubble => {
    bubble.addEventListener('click', () => {
      const reelUrl = bubble.getAttribute('data-reel-url');
      const embedHtml = `<iframe src="${reelUrl}embed" frameborder="0" scrolling="no" allowtransparency="true"></iframe>`;
      
      embedContainer.innerHTML = embedHtml;
      modal.style.display = 'block';
      document.body.style.overflow = 'hidden';
    });
  });

  closeModal.addEventListener('click', () => {
    modal.style.display = 'none';
    embedContainer.innerHTML = '';
    document.body.style.overflow = '';
  });

  modal.addEventListener('click', (e) => {
    if (e.target === modal) {
      modal.style.display = 'none';
      embedContainer.innerHTML = '';
      document.body.style.overflow = '';
    }
  });
});
{% endjavascript %} 