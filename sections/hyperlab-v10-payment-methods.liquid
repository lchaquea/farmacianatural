{%- assign product = all_products[section.settings.product_handle] | default: product -%}

<div class="hyperlab-v10-payment-methods">
  <h2 class="section-title">{{ section.settings.title }}</h2>

  <div class="payment-methods-container">
    <div class="payment-cards">
      {% for block in section.blocks %}
        <a class="payment-card" href="{{ block.settings.link }}" target="_blank" rel="noopener" {{ block.shopify_attributes }}>
          {% if block.settings.logo != blank %}
            <img src="{{ block.settings.logo | img_url: '300x' }}" alt="{{ block.settings.name }} logo" class="payment-logo" loading="lazy">
          {% endif %}
        </a>
      {% endfor %}
    </div>
    <p class="payment-note">{{ section.settings.note }}</p>
  </div>
</div>

{% schema %}
{
  "name": "V10 Payment Methods",
  "settings": [
    {
      "type": "product",
      "id": "product_handle",
      "label": "Product"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Ordena ya con envío gratis"
    },
    {
      "type": "richtext",
      "id": "note",
      "label": "Payment Note",
      "default": "<p><strong><em>Método de pago a cuotas</em></strong></p>"
    }
  ],
  "blocks": [
    {
      "type": "payment_method",
      "name": "Payment Method",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Payment Method Name",
          "default": "Addi"
        },
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "V10 Payment Methods",
      "blocks": [
        {
          "type": "payment_method",
          "settings": {
            "name": "Addi",
            "logo": "",
            "link": ""
          }
        },
        {
          "type": "payment_method",
          "settings": {
            "name": "Sistecrédito",
            "logo": "",
            "link": ""
          }
        },
        {
          "type": "payment_method",
          "settings": {
            "name": "MercadoPago",
            "logo": "",
            "link": ""
          }
        },
        {
          "type": "payment_method",
          "settings": {
            "name": "PSE",
            "logo": "",
            "link": ""
          }
        }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
.hyperlab-v10-payment-methods {
  padding: 3px 0;
  background: #fff;
  border-top: 1px solid #eee;
}

.section-title {
  font-size: var(--font-size-lg);
  font-weight: bold;
  margin-bottom: var(--spacing-md);
  text-transform: uppercase;
}

.payment-methods-container {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 4px;
  padding: 0 4px;
  max-width: 1200px;
  margin: 0 auto;
  flex-wrap: wrap;
}

.payment-cards {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 5px;
  margin: 4px 0 3px 0;
  justify-items: center;
  align-items: stretch;
}

.payment-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.07);
  padding: 10px 4px 6px 4px;
  min-height: 80px;
  min-width: 0;
  text-decoration: none !important;
  border: 1px solid #f3f3f3;
  transition: box-shadow 0.18s, transform 0.18s, border 0.18s;
  cursor: pointer;
  position: relative;
  width: 100%;
  max-width: 100px;
  height: 100px;
}

.payment-card:hover, .payment-card:focus {
  box-shadow: 0 4px 16px rgba(255,107,0,0.13);
  border: 1px solid #ffb74d;
  transform: translateY(-1px) scale(1.02);
}

.payment-logo {
  width: 100%;
  max-width: 70px;
  max-height: 50px;
  object-fit: contain;
  margin: 0 auto;
  background: transparent;
  display: block;
}

.payment-name {
  font-size: 0.9rem;
  font-weight: 600;
  color: #1a1a1a;
  text-align: center;
  margin-top: 1px;
  letter-spacing: 0.01em;
}

.payment-note {
  font-size: 0.9rem;
  color: #666;
  margin: 0;
  font-weight: 400;
  text-align: center;
}

.payment-note strong { font-weight: 700; }
.payment-note em { font-style: italic; }

.payment-method {
  display: flex;
  align-items: center;
  padding: 3px;
  background: #fff;
  border-radius: 3px;
  box-shadow: 0 1px 2px rgba(0,0,0,0.05);
  transition: transform 0.2s ease;
}

.payment-method:hover {
  transform: translateY(-1px);
}

.payment-icon {
  width: 14px;
  height: 14px;
  margin-right: 3px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.payment-method h3 {
  font-size: 8px;
  margin: 0;
  color: #333;
  font-weight: 600;
  line-height: 1.1;
}

.subtitle {
  font-size: 7px;
  color: #666;
  margin: 1px 0 0;
  line-height: 1.1;
}

@media screen and (min-width: 768px) {
  .payment-methods-container {
    gap: 6px;
    padding: 0 6px;
  }

  .payment-method {
    padding: 4px;
  }

  .payment-icon {
    width: 18px;
    height: 18px;
    margin-right: 4px;
  }

  .payment-method h3 {
    font-size: 10px;
  }

  .subtitle {
    font-size: 8px;
  }
}

@media screen and (min-width: 990px) {
  .payment-methods-container {
    gap: 8px;
    padding: 0 8px;
  }

  .payment-method {
    padding: 5px;
  }

  .payment-icon {
    width: 20px;
    height: 20px;
    margin-right: 5px;
  }

  .payment-method h3 {
    font-size: 12px;
  }

  .subtitle {
    font-size: 9px;
  }
}
{% endstylesheet %} 