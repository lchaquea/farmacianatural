{%- assign product = all_products[section.settings.product_handle] | default: product -%}

<div class="hyperlab-v10-payment-methods">
  <h2 class="section-title">{{ section.settings.title }}</h2>

  <div class="payment-methods-container">
    <div class="payment-cards">
      {% for block in section.blocks %}
        <a class="payment-card" href="{{ block.settings.link }}" target="_blank" rel="noopener" {{ block.shopify_attributes }}>
          {% if block.settings.logo != blank %}
            <img src="{{ block.settings.logo | img_url: '180x' }}" alt="{{ block.settings.name }} logo" class="payment-logo" loading="lazy">
          {% endif %}
          <span class="payment-name">{{ block.settings.name }}</span>
        </a>
      {% endfor %}
    </div>
    <p class="payment-note">{{ section.settings.note }}</p>
  </div>
</div>

{% schema %}
{
  "name": "V10 Payment Methods",
  "settings": [
    {
      "type": "product",
      "id": "product_handle",
      "label": "Product"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Ordena ya con envío gratis"
    },
    {
      "type": "text",
      "id": "note",
      "label": "Payment Note",
      "default": "Métodos de pago a cuotas"
    }
  ],
  "blocks": [
    {
      "type": "payment_method",
      "name": "Payment Method",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Payment Method Name",
          "default": "Addi"
        },
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "V10 Payment Methods",
      "blocks": [
        {
          "type": "payment_method",
          "settings": {
            "name": "Addi",
            "logo": "",
            "link": ""
          }
        },
        {
          "type": "payment_method",
          "settings": {
            "name": "Sistecrédito",
            "logo": "",
            "link": ""
          }
        },
        {
          "type": "payment_method",
          "settings": {
            "name": "MercadoPago",
            "logo": "",
            "link": ""
          }
        },
        {
          "type": "payment_method",
          "settings": {
            "name": "PSE",
            "logo": "",
            "link": ""
          }
        }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
.hyperlab-v10-payment-methods {
  padding: var(--spacing-xl) 0;
  text-align: center;
}

.section-title {
  font-size: var(--font-size-xl);
  font-weight: bold;
  margin-bottom: var(--spacing-lg);
  text-transform: uppercase;
}

.payment-methods-container {
  max-width: 800px;
  margin: 0 auto;
  padding: 0 var(--spacing-md);
}

.payment-cards {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
  gap: 28px;
  margin: 32px 0 24px 0;
  justify-items: center;
  align-items: stretch;
}

.payment-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 22px;
  box-shadow: 0 4px 24px rgba(0,0,0,0.07);
  padding: 28px 18px 18px 18px;
  min-height: 160px;
  min-width: 140px;
  text-decoration: none !important;
  border: 1.5px solid #f3f3f3;
  transition: box-shadow 0.18s, transform 0.18s, border 0.18s;
  cursor: pointer;
  position: relative;
}

.payment-card:hover, .payment-card:focus {
  box-shadow: 0 8px 32px rgba(255,107,0,0.13);
  border: 1.5px solid #ffb74d;
  transform: translateY(-2px) scale(1.03);
}

.payment-logo {
  width: 80px;
  height: 48px;
  object-fit: contain;
  margin-bottom: 14px;
  background: transparent;
}

.payment-name {
  font-size: 1.08rem;
  font-weight: 600;
  color: #1a1a1a;
  text-align: center;
  margin-top: 2px;
  letter-spacing: 0.01em;
}

.payment-note {
  font-size: var(--font-size-sm);
  color: #666;
  margin: 0;
}

@media screen and (max-width: 767px) {
  .payment-cards {
    gap: 16px;
    margin: 18px 0 12px 0;
  }
  .payment-card {
    padding: 18px 8px 12px 8px;
    min-width: 0;
    min-height: 100px;
  }
  .payment-logo {
    width: 60px;
    height: 36px;
  }
  .payment-name {
    font-size: 0.98rem;
  }
}
{% endstylesheet %} 