{% stylesheet %}
.hyperlab-v10-vitamin-benefits {
  padding: 40px 0;
  text-align: center;
}

.section-title {
  font-size: 28px;
  font-weight: bold;
  margin-bottom: 30px;
  text-transform: uppercase;
}

.benefits-gallery {
  margin: 30px auto;
  max-width: 800px;
  padding: 0 20px;
}

.gallery-container {
  position: relative;
  border-radius: 15px;
  overflow: hidden;
}

.gallery-wrapper {
  position: relative;
  width: 100%;
  padding-top: 56.25%; /* 16:9 Aspect Ratio */
}

.gallery-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 15px;
}

.benefits-subtitle {
  font-size: 20px;
  margin: 30px 0;
  color: #333;
}

.benefits-content {
  background-color: #f8f8f8;
  background-size: cover;
  background-position: center;
  padding: 50px 30px;
  border-radius: 10px;
  position: relative;
}

.benefits-content::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 10px;
}

.vitamin-circle-container {
  position: relative;
  width: 100%;
  max-width: 600px;
  margin: 0 auto;
  aspect-ratio: 1;
}

.vitamin-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 120px;
  height: 120px;
  background: #ff6b00;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
  color: white;
  box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.center-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 5px;
}

.center-emoji {
  font-size: 24px;
}

.center-text {
  font-size: 12px;
  font-weight: bold;
  text-align: center;
  line-height: 1.2;
}

.vitamin-item {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 160px;
  height: 160px;
  margin: -80px;
  transform-origin: 50% 50%;
  transform: rotate(var(--rotation)) translate(220px) rotate(calc(-1 * var(--rotation)));
  transition: all 0.3s ease;
}

.vitamin-content {
  background: white;
  border-radius: 50%;
  padding: 15px;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  transition: transform 0.3s ease;
}

.vitamin-content:hover {
  transform: scale(1.05);
}

.benefit-emoji {
  font-size: 24px;
  margin-bottom: 5px;
}

.vitamin-item h4 {
  color: #ff6b00;
  font-size: 14px;
  margin: 5px 0;
  font-weight: bold;
}

.vitamin-item p {
  margin: 0;
  color: #333;
  font-size: 12px;
  line-height: 1.3;
}

@media screen and (min-width: 768px) {
  .section-title {
    font-size: 32px;
  }

  .vitamin-center {
    width: 150px;
    height: 150px;
  }

  .center-emoji {
    font-size: 32px;
  }

  .center-text {
    font-size: 14px;
  }

  .vitamin-item {
    width: 180px;
    height: 180px;
    margin: -90px;
  }

  .vitamin-item h4 {
    font-size: 16px;
  }

  .vitamin-item p {
    font-size: 13px;
  }
}

@media screen and (max-width: 767px) {
  .vitamin-circle-container {
    transform: scale(0.8);
  }
  
  .benefits-content {
    padding: 30px 15px;
  }
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
{% endstylesheet %}

{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  const vitaminItems = document.querySelectorAll('.vitamin-content');
  
  vitaminItems.forEach(item => {
    item.addEventListener('mouseenter', function() {
      this.style.transform = 'scale(1.05)';
    });
    
    item.addEventListener('mouseleave', function() {
      this.style.transform = 'scale(1)';
    });
  });
});
{% endjavascript %} 