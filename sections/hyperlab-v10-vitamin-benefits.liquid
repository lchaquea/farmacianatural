{% stylesheet %}
.hyperlab-v10-vitamin-benefits {
  padding: 40px 0;
  text-align: center;
}

.section-title {
  font-size: 28px;
  font-weight: bold;
  margin-bottom: 30px;
  text-transform: uppercase;
}

.benefits-gallery {
  margin: 30px auto;
  max-width: 800px;
  padding: 0 20px;
}

.gallery-container {
  position: relative;
  border-radius: 15px;
  overflow: hidden;
}

.gallery-wrapper {
  position: relative;
  width: 100%;
  padding-top: 56.25%;
}

.gallery-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 15px;
}

.benefits-subtitle {
  font-size: 20px;
  margin: 30px 0;
  color: #333;
}

.benefits-content {
  background-color: #f8f8f8;
  background-size: cover;
  background-position: center;
  padding: 50px 20px;
  border-radius: 10px;
  position: relative;
  overflow: hidden;
}

.benefits-content::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 10px;
}

.benefits-layout {
  position: relative;
  z-index: 1;
  max-width: 1200px;
  margin: 0 auto;
}

.benefits-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 30px;
  padding: 20px;
}

.benefit-card {
  background: white;
  border-radius: 15px;
  padding: 20px;
  text-align: left;
  position: relative;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: flex-start;
  gap: 15px;
}

.benefit-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
}

.benefit-icon {
  width: 50px;
  height: 50px;
  background: rgba(255, 107, 0, 0.1);
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.benefit-emoji {
  font-size: 24px;
}

.benefit-info {
  flex: 1;
}

.benefit-info h4 {
  color: #ff6b00;
  font-size: 16px;
  margin: 0 0 8px;
  font-weight: bold;
}

.benefit-info p {
  margin: 0;
  color: #333;
  font-size: 14px;
  line-height: 1.4;
}

@media screen and (min-width: 768px) {
  .section-title {
    font-size: 32px;
  }

  .benefits-content {
    padding: 60px 30px;
  }

  .benefit-card {
    padding: 25px;
  }

  .benefit-icon {
    width: 60px;
    height: 60px;
  }

  .benefit-emoji {
    font-size: 28px;
  }

  .benefit-info h4 {
    font-size: 18px;
  }

  .benefit-info p {
    font-size: 15px;
  }
}

@media screen and (max-width: 767px) {
  .benefits-content {
    padding: 30px 15px;
  }

  .benefits-grid {
    grid-template-columns: 1fr;
    gap: 20px;
    padding: 10px;
  }

  .benefit-card {
    padding: 15px;
  }

  .benefit-icon {
    width: 40px;
    height: 40px;
  }

  .benefit-emoji {
    font-size: 20px;
  }
}
{% endstylesheet %}

{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  const benefitCards = document.querySelectorAll('.benefit-card');
  
  benefitCards.forEach(card => {
    card.addEventListener('mouseenter', function() {
      this.style.transform = 'translateY(-5px)';
    });
    
    card.addEventListener('mouseleave', function() {
      this.style.transform = 'translateY(0)';
    });
  });
});
{% endjavascript %} 